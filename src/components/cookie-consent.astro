      </button>
    </div>
  </div>
</div>

<script>
  let cookieConsent = {
    technical: true, // Siempre necesarias
    analytics: false,
    personalization: false
  };

  // Cargar preferencias guardadas
  const savedConsent = localStorage.getItem('cookieConsent');
  if (savedConsent) {
    cookieConsent = { ...cookieConsent, ...JSON.parse(savedConsent) };
    // Actualizar checkboxes
    updateCheckboxes();
  } else {
    // Mostrar banner si no hay preferencias guardadas
    showBanner();
  }

  // Mostrar banner
  function showBanner() {
    const banner = document.getElementById('cookie-consent');
    if (banner) {
      setTimeout(() => {
        banner.classList.remove('translate-y-full');
      }, 100);
    }
  }

  // Ocultar banner
  function hideBanner() {
    const banner = document.getElementById('cookie-consent');
    if (banner) {
      banner.classList.add('translate-y-full');
    }
  }

  // Actualizar checkboxes seg칰n preferencias
  function updateCheckboxes() {
    const analyticsCheckbox = document.getElementById('analytics-cookies') as HTMLInputElement;
    const personalizationCheckbox = document.getElementById('personalization-cookies') as HTMLInputElement;
    
    if (analyticsCheckbox && personalizationCheckbox) {
      analyticsCheckbox.checked = cookieConsent.analytics;
      personalizationCheckbox.checked = cookieConsent.personalization;
    }
  }

  // Guardar preferencias
  function savePreferences() {
    localStorage.setItem('cookieConsent', JSON.stringify(cookieConsent));
    hideBanner();
    hideModal();
    
    // Aqu칤 se implementar칤a la l칩gica para activar/desactivar las cookies
    // seg칰n las preferencias guardadas
    if (cookieConsent.analytics) {
      // Activar Google Analytics u otras herramientas anal칤ticas
    }
    if (cookieConsent.personalization) {
      // Activar cookies de personalizaci칩n
    }
  }

  // Mostrar modal de configuraci칩n
  function showModal() {
    const modal = document.getElementById('cookie-settings-modal');
    if (modal) {
      modal.classList.remove('hidden');
      modal.classList.add('flex');
      updateCheckboxes();
    }
  }

  // Ocultar modal de configuraci칩n
  function hideModal() {
    const modal = document.getElementById('cookie-settings-modal');
    if (modal) {
      modal.classList.add('hidden');
      modal.classList.remove('flex');
    }
  }

  // Event Listeners
  document.getElementById('accept-cookies')?.addEventListener('click', () => {
    cookieConsent = {
      technical: true,
      analytics: true,
      personalization: true
    };
    savePreferences();
  });

  document.getElementById('reject-cookies')?.addEventListener('click', () => {
    cookieConsent = {
      technical: true,
      analytics: false,
      personalization: false
    };
    savePreferences();
  });

  document.getElementById('cookie-settings')?.addEventListener('click', () => {
    showModal();
  });

  document.getElementById('close-settings')?.addEventListener('click', () => {
    hideModal();
  });

  document.getElementById('save-settings')?.addEventListener('click', () => {
    const analyticsCheckbox = document.getElementById('analytics-cookies') as HTMLInputElement;
    const personalizationCheckbox = document.getElementById('personalization-cookies') as HTMLInputElement;
    
    cookieConsent = {
      technical: true,
      analytics: analyticsCheckbox?.checked || false,
      personalization: personalizationCheckbox?.checked || false
    };
    
    savePreferences();
  });

  // Cerrar modal al hacer clic fuera
  document.getElementById('cookie-settings-modal')?.addEventListener('click', (e) => {
    if (e.target === e.currentTarget) {
      hideModal();
    }
  });
</script>
