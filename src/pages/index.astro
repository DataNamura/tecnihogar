---
import "@fontsource-variable/inter";
import Header from "~/components/header.astro";
import Navbar from "~/components/navbar.astro";
import Splash from "~/components/splash.astro";
import AboutUs from "~/components/about-us.astro";
import Services from "~/components/services.astro";
import Features from "~/components/features.astro";
import Brands from "~/components/brands.astro";
import FAQ from "~/components/faq.astro";
import ServiceAreas from "~/components/service-areas.astro";
import FindUs from "~/components/findus.astro";
import Footer from "~/components/footer.astro";
import WhatsAppButton from "~/components/whatsapp-button.astro";
import PhoneButton from "~/components/phone-button.astro";
import CookieBanner from "~/components/cookie-banner.astro";
import "~/styles/index.css";

const { generator, site } = Astro;
const image = new URL("social.jpg", site);
const description =
  "Servicio profesional de reparación de electrodomésticos en Tenerife Sur. Especialistas en reparación de lavadoras, neveras, lavavajillas y más. Ubicados en San Isidro, dando servicio a toda la zona sur de Tenerife.";
---

<!doctype html>
<html lang="es" class="h-full motion-safe:scroll-smooth" data-theme="dark">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" href="/favicon.svg" type="image/svg+xml" />
    <meta name="generator" content={generator} />

    <title>Reparación Electrodomésticos Tenerife Sur | S.S.T.TORRES | San Isidro</title>
    <meta name="description" content={description} />
    
    <!-- SEO Meta Tags -->
    <link rel="canonical" href="https://www.reparacionenelectrodomesticos.com/" />
    <meta name="robots" content="index, follow" />
    <meta name="author" content="S.S.T.TORRES" />
    <meta name="keywords" content="reparación electrodomésticos, servicio técnico, Tenerife Sur, San Isidro, lavadoras, neveras, lavavajillas, hornos, electrodomésticos, reparación urgente" />
    
    <!-- Open Graph Meta Tags -->
    <meta property="og:title" content="Reparación Electrodomésticos Tenerife Sur | S.S.T.TORRES" />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://www.reparacionenelectrodomesticos.com/" />
    <meta property="og:image" content="https://www.reparacionenelectrodomesticos.com/social.jpg" />
    
    <!-- Twitter Card Meta Tags -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content="Reparación Electrodomésticos Tenerife Sur | S.S.T.TORRES" />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content="https://www.reparacionenelectrodomesticos.com/social.jpg" />
    
    <!-- Structured Data -->
    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "LocalBusiness",
        "name": "S.S.T.TORRES",
        "image": "https://www.reparacionenelectrodomesticos.com/social.jpg",
        "description": "${description}",
        "address": {
          "@type": "PostalAddress",
          "streetAddress": "C. la Vera, 10, Local 1 Bajo",
          "addressLocality": "San Isidro",
          "addressRegion": "Santa Cruz de Tenerife",
          "postalCode": "38611",
          "addressCountry": "ES"
        },
        "geo": {
          "@type": "GeoCoordinates",
          "latitude": "28.0787",
          "longitude": "-16.5634"
        },
        "url": "https://www.reparacionenelectrodomesticos.com",
        "telephone": "+34922078429",
        "openingHoursSpecification": {
          "@type": "OpeningHoursSpecification",
          "dayOfWeek": [
            "Monday",
            "Tuesday",
            "Wednesday",
            "Thursday",
            "Friday",
            "Saturday",
            "Sunday"
          ],
          "opens": "08:00",
          "closes": "20:00"
        },
        "priceRange": "€€"
      }
    </script>
    <!-- ... resto de meta tags ... -->
  </head>
  <body
    class="h-full overflow-x-hidden bg-default text-default text-base selection:bg-secondary selection:text-white"
  >
    <Navbar />
    <Header />
    <Splash />
    <AboutUs />
    <Services />
    <Features />
    <Brands />
    <FAQ />
    <ServiceAreas />
    <FindUs />
    <Footer />
    <PhoneButton />
    <WhatsAppButton />
    <CookieBanner />
  </body>
</html>

<style>
  :root {
    --accent: 136, 58, 234;
    --accent-light: 224, 204, 250;
    --accent-dark: 49, 10, 101;
    --accent-gradient: linear-gradient(
      45deg,
      rgb(var(--accent)),
      rgb(var(--accent-light)) 30%,
      white 60%
    );
  }
  html {
    font-family: system-ui, sans-serif;
    background: #13151a;
    background-size: 224px;
  }
  code {
    font-family:
      Menlo,
      Monaco,
      Lucida Console,
      Liberation Mono,
      DejaVu Sans Mono,
      Bitstream Vera Sans Mono,
      Courier New,
      monospace;
  }
</style>
